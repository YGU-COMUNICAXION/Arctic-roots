---
import HeroBanner from "@components/HeroBanner.astro";
import Layout from "@layouts/Layout.astro";
import ArcticHighlights from "@components/home/ArcticHighlights.astro";
import IcelandTravel from "@components/home/IcelandTravel.astro";

import HeroImg from "@assets/img/home/hero.jpg";
import { getLangFromUrl, useTranslations } from "@i18n/utils";
import { ui } from "@i18n/ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const homeContent = ui[lang].home.highlights;
const travelContent = ui[lang].home.travel;
---

<Layout lang={lang}>
  <HeroBanner backgroundImage={HeroImg}>
    <h1
      class="text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-4 text-primary-forest"
      data-i18n-key="hero.title"
    >
      {t("hero.title")}
    </h1>
    <p
      class="text-lg md:text-xl lg:text-2xl xl:text-3xl mb-8 text-primary-forest"
      data-i18n-key="hero.subtitle"
    >
      {t("hero.subtitle")}
    </p>
  </HeroBanner>
  <section class="container mx-auto px-4 py-16 sm:py-20 lg:py-24">
    <ArcticHighlights content={homeContent} />
  </section>
  <IcelandTravel content={travelContent} />
</Layout>
